    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.6",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/method-override": "^0.0.32",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.6",
    "@types/node": "^15.12.5",
    "@types/nodemailer": "^6.4.2",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "chai": "^4.3.4",
    "faker": "^5.5.3",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
