{
  "name": "nodejs-starter-ts",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Tanmay Mishu <tanmaymishu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "NODE_ENV=testing mocha --check-leaks --exit -r ts-node/register \"tests/**/*.spec.ts\"",
    "start": "tsc && node dist/index.js",
    "fmt": "prettier --config .prettierrc 'src/**/*.ts' 'tests/**/*.ts' --write",
    "migrate:make": "knex --knexfile src/database/knexfile.ts migrate:make -x ts",
    "migrate:latest": "knex --knexfile src/database/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/database/knexfile.ts migrate:rollback"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.19",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.6",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.6",
    "@types/node": "^15.12.5",
    "@types/nodemailer": "^6.4.2",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/supertest": "^2.0.11",
    "chai": "^4.3.4",
    "faker": "^5.5.3",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@bull-board/express": "^3.3.0",
    "bcrypt": "^5.0.1",
    "bullmq": "^1.37.1",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.6",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.6.2",
    "objection": "^2.2.15",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3"
  }
}