{
  "name": "express-ts-starter",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Tanmay Mishu <tanmaymishu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "if [ -e .env ]; then echo \".env exists\"; else echo \".env not found, copying .env.example\"; cp .env.example .env;  fi && npm run migrate",
    "typeorm": "typeorm-ts-node-commonjs",
    "build": "tsc && cp -R src/views dist/views",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "export NODE_ENV=test && jest",
    "start": "export NODE_ENV=production && tsc && TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/index.js",
    "fmt": "prettier --config .prettierrc 'src/**/*.ts' 'tests/**/*.ts' --write",
    "entity:make": "cd src/database/sql/entities/ && typeorm-ts-node-commonjs entity:create",
    "migrate:make": "cd src/database/sql/migrations/ && typeorm-ts-node-commonjs migration:create",
    "migrate": "export NODE_ENV=development && typeorm-ts-node-commonjs migration:run -d src/database/sql/data-source.ts",
    "migrate:rollback": "export NODE_ENV=development && typeorm-ts-node-commonjs migration:revert -d src/database/sql/data-source.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-flash": "^0.0.37",
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.6",
    "@types/jest": "28.1.3",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.6",
    "@types/node": "^15.12.5",
    "@types/nodemailer": "^6.4.2",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "faker": "^5.5.3",
    "jest": "28.1.3",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "sqlite3": "^5.0.8",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "@bull-board/express": "^3.3.0",
    "bcrypt": "^5.0.1",
    "bullmq": "^1.37.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^6.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.12.0",
    "ioredis": "^4.28.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.6.2",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.6",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.3.3"
  }
}
